<% if (lang==="EN") { %>
    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <%- include("../partials/header") %>
    </head>
    
    <body>
        <% if (theme) { %>
        <section class="signInbox-<%= theme %>">
            <% } %>
            <% if (!theme) { %>
            <section class="signInbox-light">
                <% } %>
                <article class="input-box">
                    <h4 class="pass-recovery">Password Recovery</h4>
                    <div class="w-100  password-recovery-holder">
                        <div class="text-secondary text-center">Please write down your user name and hit send button</div>
                        <div class="input-box-container mb-5"> <input type="text" placeholder="username" name="userName"
                                value="amir"></div>
                        <button class="signInBTN sendEmailBTN m-auto d-block ">send</button>
                    </div>
    
                </article>
            </section>
<% } %>
<% if (lang==="FA") { %>
    <!DOCTYPE html>
    <html lang="fa">
    
    <head>
        <%- include("../partials/header") %>
    </head>
    
    <body id="FA">
        <% if (theme) { %>
        <section class="signInbox-<%= theme %>">
            <% } %>
            <% if (!theme) { %>
