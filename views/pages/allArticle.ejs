                    <span class="sort-title"> تاریخ ساخت</span>
                    
                    
                </div>
               <hr>
            <% } %>
           
           <div class="table-cover">
            <table class="table  article-table " data-published="<%= published %>">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" class="text-center table-title ">عنوان</th>
                        <th scope="col" class="text-center table-description">خلاصه</th>
                        <% if (published) { %>
                        <th scope="col" class="text-center table-createdAt">بازدید</th>
