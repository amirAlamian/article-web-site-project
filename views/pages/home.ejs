<% if (lang==="EN") { %>
    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <%- include("../partials/header") %>
    </head>

<body>
    <%- include("../partials/navbar",{theme,user,lang}) %>
    <section class="introduce">
        <div class="carousel-holder">
            <%- include("../partials/carousel") %>
        </div>
        
    </section>

    <section id="search" class="neg-margin neg-margin2 ">
        <form class="form-inline my-2 my-lg-0" method="POST" action="/api/search">
            <input class="form-control mr-sm-2 " name="search" id="search-input" type="search" placeholder="Article name"
                aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 " id="search-btn" type="submit">Search</button>
        </form>
    </section>


    <section class="article">
        <hr>
        <h4>
            Most Viewed Articles
        </h4>
        <hr>
        <article class="article-mostview mostViewed">

            <% let counter=0 %> 
            <% for( let index = 0; index <mostViewed.length; index++ ) { %>
                <% counter++ %> 
            <% if (index >=3) { %>

            <%- include("../partials/cards",{article:mostViewed[index],home :true ,index , hide:true , lang ,counter}) %>

            <% continue %>
            <% } %>

            <%- include("../partials/cards",{article:mostViewed[index],home :true ,index , hide:false ,lang ,counter}) %>






            <% } %>

            <div class="article-showMore">
                <button class="btn-light btn show-more" data-status="most-viewed">Show more</button>
            </div>
        </article>
        <hr>
        <h4>
            Newest Articles
        </h4>
        <hr>
        <article class="article-newest newest">
            <% counter=0 %> 
            <% for( let index =0; index < newArticles.length; index++ ) { %>
                <% counter++ %> 
            <% if (index>=3) { %>

            <%- include("../partials/cards",{article:newArticles[index],home :true ,index:index+9 ,hide:true , lang,counter}) %>

            <% continue %>
            <% } %>

            <%- include("../partials/cards",{article:newArticles[index],home :true ,index:index+9 ,hide:false , lang,counter}) %>





            <% } %>
            <div class="article-showMore">
                <button class="btn-light btn show-more" data-status="newest">Show more</button>
            </div>
        </article>
        <hr>
    </section>



    <% } %>

