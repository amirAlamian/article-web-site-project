<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body>
    <%- include("../partials/navbar",{theme,user}) %>
    <section class="introduce">
        <div class="introduce-details">
            <h1>Welcome</h1>
            <h1>Over +1000 Article on</h1>
            <h1>My site</h1>
        </div>
        <div class="introduce-links">
            <form class="form-inline my-2 my-lg-0" method="GET" action="/api/signIn">
                <button class="btn  my-2 my-sm-0" type="submit">Sign In</button>
            </form>
            <form class="form-inline my-2 my-lg-0" method="GET" action="/api/signUp">
                <button class="btn my-2 my-sm-0" type="submit">Sign Up</button>
            </form>
        </div>
    </section>

    <section id="search">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2 " id="search-input" type="search" placeholder="Search"
                aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 " id="search-btn" type="submit">Search</button>
        </form>
    </section>


    <section class="article">
        <hr>
        <h4>
            Most Viewed Articles
        </h4>
        <hr>
        <article class="article-not-done mostViewed">


            <% for( let index = 0; index <mostViewed.length; index++ ) { %>
            <% if (index >=3) { %>
          
                <%- include("../partials/cards",{article:mostViewed[index],home :true ,index , hide:true}) %>
      
            <% continue %>
            <% } %>
            
                <%- include("../partials/cards",{article:mostViewed[index],home :true ,index , hide:false}) %>
            





            <% } %>

            <div class="article-showMore">
                <button class="btn-light btn show-more" data-status="most-viewed">Show more</button>
            </div>
        </article>
        <hr>
        <h4>
            Newest Articles
        </h4>
        <hr>
        <article class="article-done newest">
            <% for( let index =0; index < newArticles.length; index++ ) { %>
            <% if (index>=3) { %>

                <%- include("../partials/cards",{article:newArticles[index],home :true ,index:index+9 ,hide:true}) %>

            <% continue %>
            <% } %>
            
                <%- include("../partials/cards",{article:newArticles[index],home :true ,index:index+9 ,hide:false}) %>
          




            <% } %>
            <div class="article-showMore">
                <button class="btn-light btn show-more" data-status="newest">Show more</button>
            </div>
        </article>

    </section>





    <%- include("../partials/footer") %>
    <%- include("../partials/scripts") %>
    <script src="/javascripts/home.js"></script>
    <script src="/javascripts/signIn.js"></script>
</body>

</html>